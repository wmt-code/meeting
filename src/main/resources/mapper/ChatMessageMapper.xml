<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.lzg.meeting.mapper.ChatMessageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.lzg.meeting.model.entity.ChatMessage">
        <id column="id" property="id"/>
        <result column="meetingId" property="meetingId"/>
        <result column="senderId" property="senderId"/>
        <result column="senderName" property="senderName"/>
        <result column="receiverId" property="receiverId"/>
        <result column="receiverName" property="receiverName"/>
        <result column="messageType" property="messageType"/>
        <result column="messageScope" property="messageScope"/>
        <result column="content" property="content"/>
        <result column="fileUrl" property="fileUrl"/>
        <result column="thumbnailUrl" property="thumbnailUrl"/>
        <result column="fileName" property="fileName"/>
        <result column="fileSize" property="fileSize"/>
        <result column="fileType" property="fileType"/>
        <result column="status" property="status"/>
        <result column="createTime" property="createTime"/>
        <result column="updateTime" property="updateTime"/>
    </resultMap>

    <!-- 游标分页查询群聊消息 -->
    <select id="selectGroupMessagesByCursor" resultMap="BaseResultMap">
        SELECT *
        FROM chat_message
        WHERE meetingId = #{meetingId}
          AND messageScope = 2
          AND status = 1
        <if test="cursor != null">
            AND id &lt; #{cursor}
        </if>
        ORDER BY id DESC
        LIMIT #{pageSize}
    </select>

    <!-- 游标分页查询私聊消息 -->
    <select id="selectPrivateMessagesByCursor" resultMap="BaseResultMap">
        SELECT *
        FROM chat_message
        WHERE meetingId = #{meetingId}
          AND messageScope = 1
          AND status = 1
          AND (
            (senderId = #{currentUserId} AND receiverId = #{otherUserId})
            OR
            (senderId = #{otherUserId} AND receiverId = #{currentUserId})
        )
        <if test="cursor != null">
            AND id &lt; #{cursor}
        </if>
        ORDER BY id DESC
        LIMIT #{pageSize}
    </select>

</mapper>
